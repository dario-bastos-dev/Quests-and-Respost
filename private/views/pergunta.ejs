<%- include('./layout/head') -%>

<body>
    <%- include('./layout/header') -%> 


   <div class="container">
          <hr>
          <h1> <%= pergunta.titulo %> </h1>
          <p> <%= pergunta.descricao %> </p>
          <hr>

          <form method="post" action="/responder">
                    <h3>Responda</h3>

                    <label class="mt-3" >Sua resposta:</label>
                    <textarea class="form-control mt-2" name="corpo" id="corpo" placeholder="Digite sua resposta"></textarea>

                    <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">

                    <button class="btn btn-primary mt-3">Responder</button>
          </form>
   </div>

   <div class="container mt-5">
          <hr>
          <h3 class="mb-4" >Respostas</h3>

          <% respostas.forEach( (resposta) => { %>
                    <div class="card mt-3">
                              <div class="card-body">
                                        <p> <%= resposta.corpo %> </p>
                              </div>
                    </div>
          <% }) %>
   </div>
    


    <%- include('./layout/foot.ejs') -%>
</body>

</html>